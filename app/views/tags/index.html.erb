<% cache [@tags] do %>
    <% content_for :keywords do %>
        <%= @tags.join(',') %>
    <%end%>
    <%= @total_tags %>
    <div class="row">
      <div class="col-md-12 no-float center-block">
        <div class="well tag-container">
          <ul class="nav nav-pills tags">
            <% tag_cloud @tags, %w[tag1 tag2 tag3 tag4] do |tag, css_class, font| %>
                <a href="<%= tag_path(tag) %>" class="<%= css_class %>" style="font-size: <%= font %>px" ><%= tag.name %></a> &nbsp;
          <% end %>
          </ul>
        </div>
      </div>
    </div>
<% end %>