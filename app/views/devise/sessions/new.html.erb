<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Ingrresar</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :username, 'Nombre de usuario' %>
      <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Olvido su contraseña?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password, 'Contraseña' %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Ingresar', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me, 'Recordarme' %>
        </div>
      <% end -%>
  <% end %>
</div>
